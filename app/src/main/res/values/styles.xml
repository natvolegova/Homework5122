<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="btn_num">
        <item name="android:background">@color/colorPrimary2</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/colorDark</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="btn_num.btn_action">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="btn_num.btn_action2">
        <item name="android:background">@color/colorLightGrey</item>
    </style>

    <style name="btn_num.result">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">36sp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="btn">
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>
